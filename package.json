{
  "name": "eth-ruling-system",
  "version": "1.0.0",
  "description": "Ruling system that monitors and preserves Ethereum transactions",
  "main": "build/src/index.js",
  "scripts": {
    "start": "node build/src/index",
    "watch": "nodemon -e ts -w ./src -x npm run watch:serve",
    "watch:serve": "ts-node ./src/index.ts",
    "build": "tsc -p ./config/tsconfig.json",
    "clean": "rm -rf ./build/** ./node_modules && npm i",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "test": "echo \"No tests so far..\"",
    "test:coverage": "npm run test -- --coverage"
  },
  "author": "Martin Marinov",
  "license": "ISC",
  "dependencies": {
    "config": "3.3.7",
    "dotenv": "16.0.0",
    "http-status-codes": "2.2.0",
    "koa": "2.13.4",
    "koa-bodyparser": "4.3.0",
    "koa-bunyan-logger": "2.1.0",
    "koa-router": "10.1.1",
    "pg": "8.7.3",
    "pg-hstore": "2.3.4",
    "pjson": "1.0.9",
    "sequelize": "6.19.0",
    "sequelize-cli": "6.4.1",
    "web3": "1.7.3"
  },
  "devDependencies": {
    "@types/config": "0.0.41",
    "@types/jest": "27.4.1",
    "@types/koa": "2.13.4",
    "@types/koa-bodyparser": "4.3.7",
    "@types/koa-bunyan-logger": "2.1.4",
    "@types/koa-compose": "3.2.5",
    "@types/koa-router": "7.4.4",
    "@types/node": "17.0.24",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "eslint": "8.13.0",
    "jest": "27.5.1",
    "nodemon": "2.0.15",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  }
}
